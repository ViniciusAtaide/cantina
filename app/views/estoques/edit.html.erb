<%= form_for(@estoque) do |f| %>
  <% if @estoque.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@estoque.errors.count, "error") %> prohibited this estoque from being saved:</h2>

      <ul>
      <% @estoque.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="page-header">
      <div class="row">
          
          <div class="col-md-6 col-sm-6">
              <h1>Editar</h1>
          </div>

              <div class="col-md-3 col-sm-3">
                <%= link_to 'Cancelar', estoques_path, :class => "btn btn-block btn-danger" %>
              </div>

              <div class="col-md-3 col-sm-3">
                  <%= f.submit :class => "btn btn-block btn-success" %>
              </div>
          
      </div>
  </div>

  <div class="form-group required">
  <div class="field">
    <%= f.label "Produto:" %><br />
