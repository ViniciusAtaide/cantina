  </div>
  <div class="form-group required">
  <div class="field">
    <%= f.label "Fornecedor:" %><br />
    <%= f.collection_select  :fornecedor_id, Fornecedor.all, :id, :nome, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :quantidade_estoque %><br />
    <%= f.number_field :quantidade_estoque, :class => "form-control" %>
  </div>
  <div class="form-group required">
  <div class="field">
    <%= f.label :quantidade_min %><br />
    <%= f.number_field :quantidade_min, :class => "form-control" %>
  </div>
  <div class="form-group required">
  <div class="field">
    <%= f.label :preco_compra %><br />
